generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPostData {
  id                 String    @id @default(uuid())
  description        String
  length             Length
  structure          Structure
  companyDetailsJSON Json
  blogPost           BlogPost? @relation(fields: [blogPostId], references: [id])
  blogPostId         String?   @unique
}

model BlogPost {
  id           String        @id @default(uuid())
  html         String
  blogPostData BlogPostData?
}

enum Length {
  SHORT
  MEDIUM
  LONG
}

enum Structure {
  LIST_FORMAT
  INTERVIEW_STYLE
  TUTORIAL
  STORY
}
